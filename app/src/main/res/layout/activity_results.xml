<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results"
    android:orientation="vertical"
    android:layout_margin="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fever"
        android:textSize="20sp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="These diseases and conditions match at least one of the factors you selected. Those with the most matches are listed first."
        android:textColor="#000"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urinary tract infection (UTI)"
        android:textColor="#0000ff"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accompanied by abdominal pain or cramping\nAccompanied by bloody or cloudy urine\nAccompanied by frequent or painful urination"
        android:textColor="#556"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Viral gastroenteritis (stomach flu)"
        android:textColor="#0000ff"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accompanied by abdominal pain or cramping\nAccompanied by diarrhea\nAccompanied by loss of appetite\nAccompanied by muscle aches\nAccompanied by nausea or vomiting"
        android:textColor="#556"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="#559955"
        android:textSize="20sp"
        android:text="Remedy"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urinary tract infection (UTI)"
        android:textColor="#0000ff"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gentamicin medicine\nCiprofloxacin medicine\nLevofloxacin medicine"
        android:textColor="#556"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Viral gastroenteritis (stomach flu)"
        android:textColor="#0000ff"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loperamide tablet\nCiprofloxacin\nLactobacillus acidophilus"
        android:textColor="#556"/>


</LinearLayout>